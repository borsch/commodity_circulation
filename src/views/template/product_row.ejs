<tr data-name="<%= product.name %>" data-code="<%= product.code %>" style="cursor: pointer;">
    <td class="code"><%= product.code %></td>
    <td class="name"><%= product.name %></td>
    <td><%= product.unit %></td>
    <td><%= product.residual.toFixed(2) %></td>
    <td><%= product.purchase_price.toFixed(2) %></td>
    <td><%= product.purchase_price_usd.toFixed(2) %></td>
    <td><%= product.sale_price.toFixed(2) %></td>
    <td><%= (product.purchase_price * product.residual).toFixed(2) %></td>
    <td><%= (product.purchase_price_usd * product.residual).toFixed(2) %></td>
    <td><%= (product.sale_price * product.residual).toFixed(2) %></td>
    <td><%= (product.sale_price * product.residual - product.purchase_price * product.residual).toFixed(2) %></td>
</tr>