<%
function daysInMonth (month, year) {
    return new Date(year, month, 0).getDate();
}
 %>
<style>
    table {
        table-layout: auto !important;
    }

    th, td, thead th, tbody td, tfoot td, tfoot th {
        width: auto !important;
    }
</style>
<div>
    <table class="table table-striped table-bordered table-sm table-hover">
    <thead>
    <tr>
        <th rowspan="3" class="text-center" style="vertical-align: middle;">Код</th>
        <th rowspan="3" class="text-center" style="vertical-align: middle; width: 50px;">
            Залишок на 01.01 2018
        </th>
        <th colspan="<%= daysInMonth(1, 2018) * 2 %>" class="text-center" style="vertical-align: middle;">Січень</th>
    </tr>
    <tr>
        <% for (var i = 0; i < daysInMonth(1, 2018); ++i) { %>
            <th colspan="2" class="text-center">
                <%= i +1 %>
            </th>
        <% } %>
    </tr>
    <tr>
        <% for (var i = 0; i < daysInMonth(1, 2018); ++i) { %>
        <th class="text-center">
            к-ть
        </th>
        <th class="text-center">
            ціна
        </th>
        <% } %>
    </tr>
    </thead>
    <tbody>
    <% for (var j = 0; j < 10; ++j) { %>
    <tr>
        <% for (var i = 0; i < daysInMonth(1, 2018) * 2 + 2; ++i) { %>
            <th class="text-center">
                <%= Math.random().toFixed(2) %>
            </th>
        <% } %>
    </tr>
    <% } %>
    </tbody>
</table>
</div>